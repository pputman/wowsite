<h1>Listing topics</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Guild</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= link_to topic.name, topic_posts_path(topic) %></td>
    <td><%= link_to topic.guild.name, guild_path(topic.guild) %></td>
    <td><%= link_to 'Destroy', topic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

